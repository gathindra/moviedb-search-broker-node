{
  "name": "movie-search-node-service",
  "version": "1.0.0",
  "description": "Node express REST service broker to search movies from The Movie Database (TMDb) API.",
  "main": "dist/server.js",
  "scripts": {
    "build-ts": "tsc",
    "start": "npm run service",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "dev": "concurrently --kill-others \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "node",
    "express",
    "REST",
    "typescript"
  ],
  "author": "Gathindra Gamamadagedon",
  "license": "ISC",
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.10",
    "@types/split": "^1.0.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.6",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "app-root-path": "^2.1.0",
    "axios": "^0.18.0",
